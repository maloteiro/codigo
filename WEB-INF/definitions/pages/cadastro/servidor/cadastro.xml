        <SQLFILTER>%*?'"</SQLFILTER>
        <SQL>SELECT tbl_servidor.seq_servidor AS key1&#xD;
 FROM tbl_servidor&#xD;
 WHERE cod_token_codigo = ?|wi.token|&#xD;
 ORDER BY tbl_servidor.seq_servidor DESC</SQL>
        <WIOBJ>tmp.wi</WIOBJ>
